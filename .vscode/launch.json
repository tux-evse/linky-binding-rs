{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "linky serial",
            "type": "lldb",
            "preLaunchTask": "binding-build",
            "request": "launch",
            "program": "afb-binder",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64"
            },
            "args": [
                "-vv",
                "--trap-faults=0", "--port=1236",
                "--config=afb-binding/etc/binding-linky-serial.yaml"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        },
        {
            "name": "linky network",
            "type": "lldb",
            "preLaunchTask": "binding-build",
            "request": "launch",
            "program": "afb-binder",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64"
            },
            "args": [
                "-vv",
                "--trap-faults=0", "--port=1236",
                "--config=afb-binding/etc/binding-linky-network.yaml"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        },
    ]
}