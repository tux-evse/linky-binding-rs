{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "binding-native-build",
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
                {
            "label": "native-debug-setup",
            "type": "shell",
            "command": "${workspaceFolder}/afb-binding/etc/remote-debug-native.sh",
            "args": [ "upboard.tuxevse.vpn", "${env:HOME}/.cargo/build/debug/libafb_linky.so", "linky/binding-linky.json", "9000", "${env:USER}"],
            "group": "none",
            "dependsOn": ["binding-native-build"],
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "rust: cargo run"
        }
    ]
}