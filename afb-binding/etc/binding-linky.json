{
  "name": "afb-linky",
  "no-ldpaths": true,
  "no-httpd": true,
  "alias": ["/devtools:/usr/share/afb-ui-devtools/binder"],
  "monitoring": true,
  "tracereq":"all",

  "binding": [
    {
        "uid": "linky-meeter",
        "api": "linky",
        "permission": "acl:linky",
        "path": "/usr/redpesk/linky-binding-rs/lib/libafb_linky.so",
        "info": "Linky French meeter api",
        "device" : "/dev/ttyUSB0",
        "speed": 9600,
        "parity": "even",
        "cycle": 25
    }
  ]
}